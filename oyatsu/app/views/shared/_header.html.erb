<% if current_member %>
  <ul class="account-menu">
    <%= current_member.name + "さん" %>
    <%= link_to "ログアウト", :session,
          method: :delete, data: { confirm: "ログアウトしますか？" } %>
  </ul>
<% end %>

<nav class="menubar">
  <ul>
    <%= menu_link_to "TOP", :root %>
    <%= menu_link_to "おやつの記録", "#" %>
    <%= menu_link_to "新規投稿", "#" %>
    <%= menu_link_to "会員一覧", :members %>
    <%= menu_link_to "会員の新規登録", :new_member %>
    <% unless current_member %>
      <%= menu_link_to "ログイン", "/login" %>
    <% end %>
  </ul>
</nav>