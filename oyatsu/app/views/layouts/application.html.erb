<!DOCTYPE html>
<html>
  <head>
    <title>おやつログ</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div id="container">
      <header>
        <%= render "shared/header" %>
      </header>
      <main>
        <% if flash.notice %>
          <p class ="notice">
            <%= flash.notice %>
          </p>
        <% end %>

        <% if flash.alert %>
          <p class="alert"><%= flash.alert %></p>
        <% end %>
        
        <%= yield %>
      </main>
      <footer>
        <%= render "shared/footer" %>
      </footer>
    </div>
  </body>
</html>
